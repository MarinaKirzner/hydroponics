<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- home servlet -->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>app.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- sensors servlet -->
    <servlet>
        <servlet-name>sensors</servlet-name>
        <servlet-class>app.servlets.SensorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sensors</servlet-name>
        <url-pattern>/sensors</url-pattern>
    </servlet-mapping>

    <!-- contact servlet -->
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>app.servlets.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

</web-app>